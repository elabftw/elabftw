{
    "extends": "stylelint-config-sass-guidelines",
    "plugins": [
      "stylelint-order"
    ],
    "rules" : {
      "selector-max-id": 3,
      "max-nesting-depth": 3,
      "order/order": [
        "custom-properties",
        "declarations",
        "rules"
      ],
      "order/properties-alphabetical-order": true
    }
}
